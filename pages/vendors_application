<script>
    clearActiveMenu();
    $('#vendors-nav').addClass('nav-vendors-active');
    $('.content-top').attr("id", "vendors");
    
  
    $( document ).ready(function() {
    //$('#datepicker').datepick({dateFormat: 'yyyy-mm-dd'});
   

    $( "#datepicker" ).datepicker();
    
    $('#full-season').on('change', function() {
        $('#short-term').not(this).prop('checked', false);  
    });
    
    $('#short-term').on('change', function() {
        $('#full-season').not(this).prop('checked', false);  
    });
    
     $('#hydro-yes').on('change', function() {
        $('#hydro-no').not(this).prop('checked', false);  
    });
    
    $('#hydro-no').on('change', function() {
        $('#hydro-yes').not(this).prop('checked', false);  
    });
    
    function validateApplication(){
        if($('#business-name').val() == ''){
            $(document).scrollTop( $("#business-name").offset().top );  
            return false;
        }
        return true;
    }

});
</script>
